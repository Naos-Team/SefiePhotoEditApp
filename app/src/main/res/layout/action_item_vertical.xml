<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/quick_action_item_padding_left"
        android:paddingTop="@dimen/quick_action_item_padding_top"
        android:paddingRight="@dimen/quick_action_item_padding_right"
        android:paddingBottom="@dimen/quick_action_item_padding_bottom"
        android:text="Chart"
        android:textColor="#fff" />
</LinearLayout>
