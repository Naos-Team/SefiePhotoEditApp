<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/back_ground" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/landing1" android:scaleType="centerCrop"/>
    <ImageView android:background="#33000000" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="3">
            <TextView android:textSize="48sp" android:textColor="#fff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="95dp" android:text="@string/app_name" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="2">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="false" android:layout_centerHorizontal="true">
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/take" android:paddingLeft="20dp" android:layout_width="90dp" android:layout_height="90dp" android:layout_marginRight="25dp" android:src="@drawable/camera"/>
                    <TextView android:textSize="15sp" android:textColor="#fff" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="相机" android:layout_alignBottom="@+id/take" android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/choose" android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/photo"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/collage" android:paddingRight="20dp" android:layout_width="90dp" android:layout_height="90dp" android:layout_marginLeft="25dp" android:src="@drawable/collage"/>
                    <TextView android:textSize="15sp" android:textColor="#fff" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="拼贴" android:layout_alignBottom="@+id/collage" android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
