<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ScrollView android:id="@+id/scroller" android:scrollbars="none" android:fadingEdgeLength="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp">
        <LinearLayout android:orientation="vertical" android:id="@+id/tracks" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
    </ScrollView>
    <ImageView android:id="@+id/arrow_up" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <ImageView android:id="@+id/arrow_down" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-4dp" android:layout_below="@+id/scroller"/>
</RelativeLayout>
