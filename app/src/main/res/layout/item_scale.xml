<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/colorHeader"
    android:padding="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_scale_border"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:tint="@color/semi_text">

        <ImageView
            android:id="@+id/iv_custom"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:layout_centerInParent="true"
            android:tint="@color/semi_text"
            android:src="@drawable/ic_custom_scale"/>

        <RelativeLayout
            android:id="@+id/rl_scale"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_scale" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/semi_text"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:text="title"/>
</LinearLayout>