<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutRoot">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/icon_album"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:riv_corner_radius="10dp"
        android:src="@drawable/img_blender_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.sweet.selfiecameraphotoeditor.common.CustomTextView
        android:id="@+id/name_album"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Name album"
        android:textColor="#272727"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_album"
        app:layout_constraintVertical_bias="0.0" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/bg_count"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="#805E5E5E"
        app:layout_constraintBottom_toBottomOf="@+id/icon_album"
        app:layout_constraintEnd_toEndOf="@+id/icon_album"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="@+id/icon_album"
        app:layout_constraintTop_toTopOf="@+id/icon_album"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintWidth_percent="0.6"
        app:riv_corner_radius="5dp" />

    <com.sweet.selfiecameraphotoeditor.common.CustomTextView
        android:id="@+id/path_album"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxLines="1"
        android:gravity="center"
        android:text="0 File"
        android:textColor="@color/white"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/bg_count"
        app:layout_constraintEnd_toEndOf="@+id/bg_count"
        app:layout_constraintStart_toStartOf="@+id/bg_count"
        app:layout_constraintTop_toTopOf="@+id/bg_count"/>

</androidx.constraintlayout.widget.ConstraintLayout>







