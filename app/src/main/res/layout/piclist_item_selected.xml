<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/layoutRoot" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@+id/imageItem" android:padding="5dp" android:layout_width="80dp" android:layout_height="80dp" android:scaleType="centerCrop"/>
        <ImageView android:id="@+id/ivPause" android:padding="25dp" android:layout_width="80dp" android:layout_height="80dp" android:src="@drawable/img_videoplay" android:scaleType="centerCrop"/>
        <ImageView android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:id="@+id/btnDelete" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/img_removephoto"/>
    </FrameLayout>
</RelativeLayout>
